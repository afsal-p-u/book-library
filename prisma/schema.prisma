// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  image String?
  name String
  email String @unique
  password String
  wishlist Books[]
  cart Cart[]
  collection Collection[]
}

model Books {
  id Int @id @default(autoincrement())
  title String
  image String
  author String
  category String
  price Int
  star Int

  wishlist User? @relation(fields: [wishlistId], references: [id])
  wishlistId Int?
}

model Collection {
  id Int @id @default(autoincrement())
  title String
  image String
  author String
  category String
  price Int
  star Int
  downloadUrl String?

  collection User? @relation(fields: [collectionId], references: [id])
  collectionId Int?
}

model Cart {
  id Int @id @default(autoincrement())
  title String
  image String
  author String
  category String
  price Int
  star Int

  cart User? @relation(fields: [cartId], references: [id])
  cartId Int?
} 
